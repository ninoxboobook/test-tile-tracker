<%- contentFor('body') %>

<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">Test Tiles</h1>
      <button type="button" onclick="window.location.href='/test-tiles/new'" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-clay-600 hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
        Add New Test Tile
      </button>
    </div>

    <div class="mt-8">
      <% if (testTiles && testTiles.length > 0) { %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% testTiles.forEach(function(tile) { %>
            <div class="bg-white overflow-hidden shadow rounded-lg">
              <div class="p-5">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <% if (tile.imageUrl) { %>
                      <img class="h-32 w-32 object-cover rounded" src="<%= tile.imageUrl %>" alt="Test tile image">
                    <% } else { %>
                      <div class="h-32 w-32 bg-gray-200 rounded flex items-center justify-center">
                        <span class="text-gray-400">No image</span>
                      </div>
                    <% } %>
                  </div>
                  <div class="ml-5">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                      <%= tile.name %>
                    </h3>
                    <div class="mt-2 max-w-xl text-sm text-gray-500">
                      <p>Series: <%= tile.TestSeries ? tile.TestSeries.name : 'None' %></p>
                      <p>Clay: <%= tile.ClayBody ? tile.ClayBody.name : 'None' %></p>
                      <p>Decoration: <%= tile.Decoration ? tile.Decoration.name : 'None' %></p>
                    </div>
                  </div>
                </div>
                <div class="mt-4">
                  <a href="/test-tiles/<%= tile.id %>" class="text-sm font-medium text-clay-600 hover:text-clay-500">
                    View Details <span aria-hidden="true">&rarr;</span>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <h3 class="mt-2 text-sm font-medium text-gray-900">No test tiles</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new test tile.</p>
          <div class="mt-6">
            <button type="button" onclick="window.location.href='/test-tiles/new'" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-clay-600 hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
              Add New Test Tile
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
