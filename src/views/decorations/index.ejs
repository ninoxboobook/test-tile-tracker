<%- contentFor('body') %>

<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">Decorations</h1>
      <button type="button" onclick="window.location.href='/decorations/new'" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-clay-600 hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
        Add New Decoration
      </button>
    </div>

    <div class="mt-8">
      <% if (decorations && decorations.length > 0) { %>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% decorations.forEach(function(decoration) { %>
            <div class="bg-white overflow-hidden shadow rounded-lg divide-y divide-gray-200">
              <div class="p-5">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                    <%= decoration.name %>
                  </h3>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-clay-100 text-clay-800">
                    <%= decoration.TestTiles ? decoration.TestTiles.length : 0 %> tiles
                  </span>
                </div>
                <div class="mt-2">
                  <p class="text-sm text-gray-500">
                    <%= decoration.description || 'No description provided' %>
                  </p>
                  <% if (decoration.type) { %>
                    <p class="mt-1 text-sm text-gray-500">
                      Type: <%= decoration.type %>
                    </p>
                  <% } %>
                </div>
                <div class="mt-4">
                  <a href="/decorations/<%= decoration.id %>" class="text-sm font-medium text-clay-600 hover:text-clay-500">
                    View Details <span aria-hidden="true">&rarr;</span>
                  </a>
                </div>
              </div>
              <div class="px-5 py-3 bg-gray-50">
                <div class="text-xs text-gray-500">
                  Added <%= new Date(decoration.createdAt).toLocaleDateString() %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <h3 class="mt-2 text-sm font-medium text-gray-900">No decorations</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding a new decoration.</p>
          <div class="mt-6">
            <button type="button" onclick="window.location.href='/decorations/new'" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-clay-600 hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
              Add New Decoration
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
