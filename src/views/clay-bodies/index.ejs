<%- contentFor('body') %>

<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div id="page-header" class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">Clay Bodies</h1>
      <a href="/clay-bodies/new" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-clay-600 hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
        Add New Clay Body
      </a>
    </div>

    <div class="mt-8">
      <% if (clayBodies && clayBodies.length > 0) { %>
        <div>
          <table class="w-full divide-y divide-gray-300">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Name</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Type</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Manufacturer</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Cone</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Color (Oxidation)</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Color (Reduction)</th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Added</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% clayBodies.forEach(function(clay) { %>
                <tr>
                  <td class="py-4 pl-4 pr-3 text-sm font-medium text-gray-900">
                    <a href="/clay-bodies/<%= clay.id %>" class="text-clay-600 hover:text-clay-900"><%= clay.name %></a>
                  </td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= clay.type %></td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= clay.manufacturer || '—' %></td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= clay.cone || '—' %></td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= clay.colourOxidation || '—' %></td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= clay.colourReduction || '—' %></td>
                  <td class="py-4 px-3 text-sm text-gray-500"><%= new Date(clay.createdAt).toLocaleDateString() %></td>
                  <td class="relative py-4 pl-3 pr-4 text-right text-sm font-medium">
                    <button onclick="deleteClay('<%= clay.id %>')" class="text-red-600 hover:text-red-900">Delete</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-16 bg-white">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No clay bodies</h3>
          <p class="mt-2 text-lg text-gray-600">Get started by creating a new clay body.</p>
          <div class="mt-8">
            <a href="/clay-bodies/new" class="inline-flex items-center gap-x-1.5 rounded-md bg-clay-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-clay-500">
              Add Clay Body
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="ml-2 h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
async function deleteClay(id) {
  if (!confirm('Are you sure you want to delete this clay body? This action cannot be undone.')) {
    return;
  }

  try {
    const response = await fetch(`/clay-bodies/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    if (response.ok) {
      window.location.reload();
    } else {
      alert('Error deleting clay body. Please try again.');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error deleting clay body. Please try again.');
  }
}
</script>
