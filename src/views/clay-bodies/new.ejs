<%- contentFor('body') %>

<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div id="page-header" class="flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-900">New Clay Body</h1>
    </div>

    <div class="mt-8">
      <form action="/clay-bodies" method="POST" class="space-y-8 divide-y divide-gray-200">
        <div class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <div class="mt-1">
              <input type="text" name="name" id="name" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
            <div class="mt-1">
              <select name="type" id="type" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
                <option value="">Select a type</option>
                <option value="Raku">Raku</option>
                <option value="Earthenware">Earthenware</option>
                <option value="Stoneware">Stoneware</option>
                <option value="Bone China">Bone China</option>
                <option value="Porcelain">Porcelain</option>
                <option value="Wild">Wild</option>
              </select>
            </div>
          </div>

          <div>
            <label for="manufacturer" class="block text-sm font-medium text-gray-700">Manufacturer</label>
            <div class="mt-1">
              <input type="text" name="manufacturer" id="manufacturer" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="cone" class="block text-sm font-medium text-gray-700">Cone</label>
            <div class="mt-1">
              <input type="text" name="cone" id="cone" required class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="firingTemperature" class="block text-sm font-medium text-gray-700">Firing Temperature (Â°C)</label>
            <div class="mt-1">
              <input type="number" name="firingTemperature" id="firingTemperature" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="colourOxidation" class="block text-sm font-medium text-gray-700">Colour (Oxidation)</label>
            <div class="mt-1">
              <input type="text" name="colourOxidation" id="colourOxidation" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="colourReduction" class="block text-sm font-medium text-gray-700">Colour (Reduction)</label>
            <div class="mt-1">
              <input type="text" name="colourReduction" id="colourReduction" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="shrinkage" class="block text-sm font-medium text-gray-700">Shrinkage (%)</label>
            <div class="mt-1">
              <input type="number" step="0.1" name="shrinkage" id="shrinkage" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="absorption" class="block text-sm font-medium text-gray-700">Absorption (%)</label>
            <div class="mt-1">
              <input type="number" step="0.1" name="absorption" id="absorption" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
            </div>
          </div>

          <div>
            <label for="plasticity" class="block text-sm font-medium text-gray-700">Plasticity</label>
            <div class="mt-1">
              <select name="plasticity" id="plasticity" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
                <option value="">Select plasticity</option>
                <option value="very low">Very Low</option>
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
                <option value="very high">Very High</option>
              </select>
            </div>
          </div>

          <div>
            <label for="texture" class="block text-sm font-medium text-gray-700">Texture</label>
            <div class="mt-1">
              <select name="texture" id="texture" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm">
                <option value="">Select texture</option>
                <option value="smooth">Smooth</option>
                <option value="fine grog">Fine Grog</option>
                <option value="medium grog">Medium Grog</option>
                <option value="coarse grog">Coarse Grog</option>
              </select>
            </div>
          </div>

          <div>
            <label for="composition" class="block text-sm font-medium text-gray-700">Composition</label>
            <div class="mt-1">
              <textarea name="composition" id="composition" rows="3" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-clay-500 focus:ring-clay-500 sm:text-sm"></textarea>
            </div>
            <p class="mt-2 text-sm text-gray-500">Enter the clay body composition details.</p>
          </div>
        </div>

        <div class="pt-5">
          <div class="flex justify-end">
            <a href="/clay-bodies" class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-clay-500 focus:ring-offset-2">Cancel</a>
            <button type="submit" class="ml-3 inline-flex justify-center rounded-md border border-transparent bg-clay-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-clay-700 focus:outline-none focus:ring-2 focus:ring-clay-500 focus:ring-offset-2">Create Clay Body</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Hide/show manufacturer field based on type selection
document.getElementById('type').addEventListener('change', function() {
  const manufacturerField = document.querySelector('label[for="manufacturer"]').parentElement;
  if (this.value === 'Wild') {
    manufacturerField.style.display = 'none';
    document.getElementById('manufacturer').value = '';
  } else {
    manufacturerField.style.display = 'block';
  }
});
</script>
