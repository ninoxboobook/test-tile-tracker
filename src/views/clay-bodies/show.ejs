<%- contentFor('body') %>

<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= clayBody.name %></h2>
      </div>
      <div class="mt-4 flex md:ml-4 md:mt-0 space-x-2">
        <a href="/clay-bodies" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-clay-500">
          Back to Clay Bodies
        </a>
        <button onclick="deleteClay('<%= clayBody.id %>')" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          Delete
        </button>
      </div>
    </div>

    <div class="mt-8 bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <!-- Type -->
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.type %></dd>
          </div>

          <!-- Manufacturer -->
          <% if (clayBody.manufacturer) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Manufacturer</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.manufacturer %></dd>
          </div>
          <% } %>

          <!-- Firing Temperature -->
          <% if (clayBody.firingTemperature) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Firing Temperature</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.firingTemperature %></dd>
          </div>
          <% } %>

          <!-- Cone -->
          <% if (clayBody.cone) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Cone</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.cone %></dd>
          </div>
          <% } %>

          <!-- Color -->
          <% if (clayBody.color) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Color</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.color %></dd>
          </div>
          <% } %>

          <!-- Shrinkage -->
          <% if (clayBody.shrinkage) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Shrinkage</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.shrinkage %>%</dd>
          </div>
          <% } %>

          <!-- Absorption -->
          <% if (clayBody.absorption) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Absorption</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.absorption %>%</dd>
          </div>
          <% } %>

          <!-- Plasticity -->
          <% if (clayBody.plasticity) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Plasticity</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.plasticity %></dd>
          </div>
          <% } %>

          <!-- Texture -->
          <% if (clayBody.texture) { %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Texture</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= clayBody.texture %></dd>
          </div>
          <% } %>

          <!-- Composition -->
          <% if (clayBody.composition) { %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Composition</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <div class="bg-gray-50 rounded-md p-4">
                <pre class="whitespace-pre-wrap"><%= clayBody.composition %></pre>
              </div>
            </dd>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
async function deleteClay(id) {
  if (!confirm('Are you sure you want to delete this clay body? This action cannot be undone.')) {
    return;
  }

  try {
    const response = await fetch(`/clay-bodies/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    if (response.ok) {
      window.location.href = '/clay-bodies';
    } else {
      alert('Error deleting clay body. Please try again.');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error deleting clay body. Please try again.');
  }
}
</script>
